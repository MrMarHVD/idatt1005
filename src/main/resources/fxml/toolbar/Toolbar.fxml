<ToolBar prefHeight="62.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.idatt1005.plate.controller.toolbar.ToolbarController">
   <items>
      <HBox prefHeight="51.0" prefWidth="530.0">
