          <children>
            <VBox prefHeight="503.0" prefWidth="179.0">
              <children>
                <Label prefHeight="80.0" prefWidth="279.0" text="Other recipes you might like">
                  <font>
                    <Font size="14.0" />
                  </font>
                </Label>
                <GridPane fx:id="recommendedRecipes" prefHeight="431.0" prefWidth="219.0">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                </GridPane>
              </children>
            </VBox>
            <VBox prefHeight="429.0" prefWidth="361.0">
              <children>
                        <Label fx:id="recipeNameLabel" prefHeight="37.0" prefWidth="341.0" text="Recipe">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                        <Region prefHeight="101.0" prefWidth="320.0" />
                <Label prefHeight="30.0" prefWidth="371.0" text="Instructions">
                  <font>
                    <Font size="19.0" />
                  </font>
                </Label>
                <TextArea fx:id="instructionsArea" prefColumnCount="1" prefHeight="336.0" prefWidth="320.0" wrapText="true" />
              </children></VBox>
            <VBox prefHeight="503.0" prefWidth="382.0">
              <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                      <Label prefHeight="29.0" prefWidth="190.0" text="Ingredients">
                        <font>
                          <Font size="19.0" />
                        </font>
                      </Label>
                              <TextField fx:id="portionTextField" prefHeight="32.0" prefWidth="174.0" promptText="Portions" />
                           </children>
                        </HBox>
                <HBox prefHeight="28.0" prefWidth="171.0">
                  <children>
                    <Label prefHeight="28.0" prefWidth="101.0" text="Name">
                      <font>
                        <Font size="16.0" />
                      </font>
                    </Label>
                              <Label prefHeight="28.0" prefWidth="106.0" text="Amount">
                                 <font>
                                    <Font size="16.0" />
