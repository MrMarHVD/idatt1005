      <right>
        <VBox prefHeight="503.0" prefWidth="141.0" BorderPane.alignment="CENTER">
          <children>
                  <Label prefHeight="32.0" prefWidth="143.0" text="New Recipe">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="recipeNameTextField" promptText="Recipe Name" />
            <Button fx:id="newRecipeButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="205.0" text="New Recipe" />
